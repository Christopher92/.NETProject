@model ComputerShop.Models.Article
@{
    ViewBag.Title = "RetrieveArticle";
    Layout = null;
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Artykuły
        </h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="media">
            <div class="media-body">
                <h4 class="media-heading">
                    <p>@Html.DisplayFor(x => Model.Title)</p>
                </h4>
                <p>@Html.DisplayFor(x => Model.Content)</p>
                <h4>Autor: @Html.DisplayFor(x => Model.Author)</h4>
            </div>
            <hr>
        </div>
    </div>
</div>