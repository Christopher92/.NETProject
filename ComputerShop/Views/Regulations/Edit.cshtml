@model ComputerShop.Models.Regulation

@{
    ViewBag.Title = "Regulamin";
}

<h2>Regulamin</h2>
<hr />

@using (@Ajax.BeginForm("Edit", "Regulations", new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "main" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.RegulationID)

            <div class="col-md-12">
                @Html.TextAreaFor(model => model.Rule, new { @class = "form-control", rows="25" , @style = "max-width: 100%"})
                @Html.ValidationMessageFor(model => model.Rule, "", new { @class = "text-danger" })
            </div>

        <div class="form-group">
            <div class="col-md-offset-6 row col-md-10">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

