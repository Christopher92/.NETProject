@model ComputerShop.Models.Regulation

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (@Ajax.BeginForm("Create", "Regulations", new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "main" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Regulation</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Rule, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Rule, new { @class = "form-control", rows="30", cols="80"})
                @Html.ValidationMessageFor(model => model.Rule, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Ajax.ActionLink("Powrót", "GetRegulations", "Admin", null, new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "main", InsertionMode = InsertionMode.Replace }, new { @class = "text" })
</div>
